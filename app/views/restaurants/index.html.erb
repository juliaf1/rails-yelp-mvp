<div class="container">
  <% @restaurants.each do |r| %>
    <div class="row justify-content-center">
      <div class="col-10 col-lg-8 text-center mb-3">
        <h2><%= r.name %></h2>
        <%= link_to 'See more', restaurant_path(r), class: "rest-link border-right pr-2" %>
        <%= link_to 'Add review', new_restaurant_review_path(r), class: "rest-link ml-1" %>
        <p><%= r.address %></p>
      </div>
    </div>
  <% end %>
</div>
